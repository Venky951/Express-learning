<%- include('partials/header') %>
</head>
<body>
  <main class="container mx-auto mt-10 max-w-xl rounded-2xl bg-white p-8 shadow-lg">
  <h1 class="mb-6 text-center text-4xl font-bold text-gray-800">
    Register to Airbnb
  </h1>

  <form action="/host/home-page" method="POST" class="space-y-5">
    <div>
      <input
        type="text"
        name="Housename"
        placeholder="Enter your Housename"
        class="w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-800 placeholder-gray-400 focus:border-rose-500 focus:outline-none focus:ring-2 focus:ring-rose-500"
        required
      />

    </div>

    <div>
      <input
        type="text"
        name="Price"
        placeholder="Enter your Price per Night"
        class="w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-800 placeholder-gray-400 focus:border-rose-500 focus:outline-none focus:ring-2 focus:ring-rose-500"
        required
      />
    </div>
<div>
      <input
        type="text"
        name="Location"
        placeholder="Enter your Location"
        class="w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-800 placeholder-gray-400 focus:border-rose-500 focus:outline-none focus:ring-2 focus:ring-rose-500"
        required
      />
      
    </div>
    <div>
      <input
        type="text"
        name="Rating"
        placeholder="Enter your Rating"
        class="w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-800 placeholder-gray-400 focus:border-rose-500 focus:outline-none focus:ring-2 focus:ring-rose-500"
        required
      />
      
    </div>
    <div>
      <input
        type="file"
        name="image"
        placeholder="Add Image"
        class="w-full rounded-lg border border-gray-300 px-4 py-3 text-gray-800 placeholder-gray-400 focus:border-rose-500 focus:outline-none focus:ring-2 focus:ring-rose-500"
        required
      />
      
    </div>
    <button
      type="submit"
      class="w-full rounded-lg bg-rose-500 px-4 py-3 font-semibold text-white transition hover:bg-rose-600 focus:outline-none focus:ring-2 focus:ring-rose-500 focus:ring-offset-2"
    >
      Submit
    </button>
  </form>
</main>

</body>
</html>